%hr
%h4
  Request explanation
  %small
    = distance_of_time_in_words(draft_skill.created_at, Time.now)
    ago
%p
  %span
    = link_to draft_skill.requester&.full_name, user_path(draft_skill.requester)
  %span= draft_skill.requester_explanation
%hr

- if draft_skill.reviewer_explanation.present?
  %h4
    Reviewer explanation
    %small
      = distance_of_time_in_words(draft_skill.updated_at, Time.now)
      ago
  %p
    %span
      = link_to draft_skill.reviewer&.full_name, user_path(draft_skill.reviewer)
    %span= draft_skill.reviewer_explanation
  %hr
