.container
  %h1 Your skills

  %ul.js-skills-tab.nav.nav-tabs{ role: "tablist" }
    %li
      %h4.skills-header.text-primary Skill categories:
    - @grouped_skills_by_category.keys.each_with_index do |skill_category|
      %li{ role: "presentation" }
        %a{ id: "#{skill_category}-tab", aria: { controls: skill_category, expanded: "false"}, data: { toggle: "tab" }, href: "##{skill_category}", role: "tab" }= skill_category
    %li.pull-right{ role: "presentation" }
      = link_to new_skill_path, role: 'button' do
        %i.glyphicon.glyphicon-plus
        %span Add new skill

  .tab-content
    - @grouped_skills_by_category.each do |skill_category, skills|
      .tab-pane.fade{ id: "#{skill_category}", aria: { labelledby: "#{skill_category}-tab" }, role: "tabpanel" }
        %table.table.table-striped.table-condensed
          %thead
            %tr
              %th Name
              %th Description
              %th Rate
              %th Note
              %th Favorite
          %tbody
            - skills.each do |skill|
              %tr
                %td= skill.name
                %td= skill.description
                %td= skill.rate
                %td= skill.note
                %td= skill.favorite

